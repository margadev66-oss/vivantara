{
  "name": "vivantara-platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --webpack",
    "build": "NEXT_DISABLE_SWC_WASM=1 RAYON_NUM_THREADS=1 next build --webpack",
    "start": "node .next/standalone/server.js",
    "start:next": "next start",
    "start:standalone": "node .next/standalone/server.js",
    "clean:build": "node -e \"require('node:fs').rmSync('.next',{recursive:true,force:true})\"",
    "env:check:milesweb": "node -e \"const req=['DATABASE_URL'];const opt=['NEXTAUTH_SECRET','AUTH_SECRET'];const miss=req.filter(k=>!process.env[k]);const hasSecret=opt.some(k=>Boolean(process.env[k]));if(miss.length||!hasSecret){console.error('Missing required env vars: '+[...miss,...(!hasSecret?['NEXTAUTH_SECRET or AUTH_SECRET']:[])].join(', '));process.exit(1)};console.log('MilesWeb env check passed')\"",
    "build:milesweb": "npm run env:check:milesweb && node scripts/build-milesweb.js",
    "lint": "eslint",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@prisma/adapter-better-sqlite3": "^7.3.0",
    "@prisma/client": "^6.19.2",
    "@types/sanitize-html": "^2.16.0",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.6.2",
    "clsx": "^2.1.1",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "next-auth": "^4.24.13",
    "prisma": "^6.19.2",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hook-form": "^7.71.1",
    "sanitize-html": "^2.17.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "jsdom": "^24.0.0",
    "tailwindcss": "^4",
    "vite": "^5.0.0",
    "vite-tsconfig-paths": "^5.0.0",
    "vitest": "^2.1.0",
    "tsx": "^4.21.0",
    "typescript": "^5"
  }
}
